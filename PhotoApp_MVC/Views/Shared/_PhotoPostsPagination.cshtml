@model X.PagedList.IPagedList<PhotoPost>

<div class="row">
    <div class="col">
        <div class="d-flex justify-content-center">
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="PhotoPosts" asp-route-page="1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="PhotoPosts" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-controller="PhotoPosts" asp-route-page="@i">@i</a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="PhotoPosts" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="PhotoPosts" asp-route-page="@Model.PageCount">Last</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
